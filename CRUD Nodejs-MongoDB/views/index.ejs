<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if (movies != '') { %>
                    <table class="table table-striped text-center table-full-width">
                        <thead>
                            <tr class="table-dark">
                                <th>Numero</th>
                                <th>Portada</th>
                                <th>Titulo</th>
                                <th>Año</th>
                                <th>Género</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let counter = 1; %>
                            <% movies.forEach(function(movie) { %>
                                <tr class="align-middle">
                                    <td><%= counter++ %></td>
                                    <td><img src="<%= movie.image %>" width="50" class="img-thumbnail" alt="Portada"></th>
                                    <td><%= movie.title %></td>
                                    <td><%= movie.year %></td>
                                    <td><%= movie.genre %></td>
                                    <td>
                                        <a href="/edit/<%= movie._id %>" class="text-success"><i class="fas fa-edit mx-1"></i></a>
                                        <a href="/delete/<%= movie._id %>" class="text-danger"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No hay películas</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
